# Set default behavior to automatically normalize line endings.
* text=auto

# Force CRLF for all text files that should have it.
*.{cs,xaml,xml,ps1,psm1,psd1,json,ruleset,md,sln,csproj,config,targets,props} text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf

# Force LF for files that should always have it.
*.sh text eol=lf

# Mark binary files to prevent them from being changed.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.exe binary
*.dll binary
*.zip binary
*.7z binary
*.ttf binary
*.otf binary
*.eot binary
*.woff binary
*.woff2 binary
*.psd binary
*.ai binary
*.pdf binary
*.mdf binary
*.ldf binary
*.ndf binary
*.sqlite binary

# Git LFS tracking
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text
*.mdf filter=lfs diff=lfs merge=lfs -text
*.ldf filter=lfs diff=lfs merge=lfs -text
*.ndf filter=lfs diff=lfs merge=lfs -text
*.sqlite filter=lfs diff=lfs merge=lfs -text
*.targets text eol=lf

# XAML files - use LF for consistency
*.xaml text eol=lf

# Configuration and data files
*.config text eol=lf
*.xml text eol=lf
*.ruleset text eol=lf

# Documentation files
*.md text eol=lf
README* text eol=lf
CONTRIBUTING* text eol=lf
LICENSE* text eol=lf
