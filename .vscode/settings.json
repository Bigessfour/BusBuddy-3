{
  // YAML Formatting Settings - Based on GitHub/GitKraken Official Standards
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "[github-actions-workflow]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },

  // Prettier Configuration
  "prettier.configPath": ".prettierrc.yml",
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,

  // Trunk.io Configuration
  "trunk.enableLinting": true,
  "trunk.enableFormatting": true,
  "trunk.formatOnSave": true,

  // Global YAML settings
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },

