  // Ensure BusBuddy PowerShell modules are on PSModulePath for integrated terminals
  // This enables PowerShell module autoloading for bb-* commands without editing user profiles.
  "terminal.integrated.env.windows": {
    "PSModulePath": "${workspaceFolder}\\PowerShell\\Modules;${env:PSModulePath}"
  },

  // Force integrated terminal to use PowerShell 7.5.2
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Trunk.io Configuration - Enhanced for BusBuddy Development
  "trunk.enableLinting": true,
  "trunk.enableFormatting": true,
  "trunk.formatOnSave": true,
  "trunk.gitIntegration": true,
  "trunk.showStatusInExplorer": true,
  "trunk.autoFormatOnPaste": true,
  "trunk.enableActions": true,

  // File duplication prevention settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.hotExit": "onExitAndWindowClose",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "extensions.autoUpdate": false,
  "files.exclude": {
    "**/*.bak": true,
    "**/*.(1).*": true,
    "**/*.(2).*": true,
    "**/*.backup": true,
    "**/*.tmp": true,
    "**/*.temp": true
  },

  // Global YAML settings
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },

  "prettyxml.settings.enableLogs": true,
  "prettyxml.settings.formatOnSave": true,
  "window.density.editorTabHeight": "compact"
}
