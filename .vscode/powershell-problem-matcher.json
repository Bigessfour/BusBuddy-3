{
  "problemMatcher": [
    {
      "name": "powershell",
      "owner": "powershell",
      "fileLocation": ["relative", "${workspaceFolder}"],
      "pattern": {
        "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "message": 4
      }
    },
    {
      "name": "powershell-scriptanalyzer",
      "owner": "powershell-scriptanalyzer",
      "fileLocation": ["relative", "${workspaceFolder}"],
      "pattern": {
        "regexp": "^(Warning|Error|Information)\\s+(.*)\\s+(.*)\\s+(.*):(\\d+):(\\d+)$",
        "severity": 1,
        "code": 2,
        "message": 3,
        "file": 4,
        "line": 5,
        "column": 6
      }
    }
  ]
}
