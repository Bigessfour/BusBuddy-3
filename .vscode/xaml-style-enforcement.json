{
  "xamlStyler.settings": {
    "AttributesTolerance": 2,
    "KeepFirstAttributeOnSameLine": true,
    "MaxAttributeCharactersPerLine": 120,
    "MaxAttributesPerLine": 1,
    "NewlineExemptionElements": "RadialGradientBrush, GradientStop, LinearGradientBrush, ScaleTransform, SkewTransform, RotateTransform, TranslateTransform, Trigger, Condition, Setter",
    "SeparateByGroups": true,
    "AttributeIndentation": 0,
    "AttributeIndentationStyle": 0,
    "RemoveDesignTimeReferences": false,
    "FormatMarkupExtension": true,
    "ReorderVSM": true,
    "ReorderGridChildren": true,
    "ReorderCanvasChildren": true,
    "ThicknessSeparator": ",",
    "AttributeOrdering": {
      "enabled": true,
      "order": [
        "x:Key",
        "x:Name",
        "x:Uid",
        "Name",
        "Grid.Row",
        "Grid.Column",
        "Grid.RowSpan",
        "Grid.ColumnSpan",
        "DockPanel.Dock",
        "Canvas.Left",
        "Canvas.Top",
        "Canvas.Right",
        "Canvas.Bottom",
        "Width",
        "Height",
        "MinWidth",
        "MinHeight",
        "MaxWidth",
        "MaxHeight",
        "Margin",
        "Padding",
        "HorizontalAlignment",
        "VerticalAlignment",
        "Panel.ZIndex",
        "Visibility",
        "IsEnabled",
        "Foreground",
        "Background",
        "FontFamily",
        "FontSize",
        "FontWeight",
        "FontStyle",
        "TextAlignment",
        "VerticalContentAlignment",
        "HorizontalContentAlignment"
      ]
    }
  },
  "xamlValidation": {
    "syncfusionNamespaceRequired": {
      "enabled": true,
      "severity": "error",
      "message": "Syncfusion controls require xmlns:syncfusion declaration"
    },
    "themeConsistency": {
      "enabled": true,
      "severity": "warning",
      "allowedThemes": [
        "FluentDark",
        "FluentLight"
      ],
      "message": "Use consistent FluentDark or FluentLight themes"
    },
    "controlNaming": {
      "enabled": true,
      "severity": "suggestion",
      "pattern": "^[A-Z][a-zA-Z0-9]*$",
      "message": "Control names should use PascalCase"
    },
    "xmlCommentRules": {
      "noDoubleDash": {
        "enabled": true,
        "severity": "error",
        "message": "Replace -- with â€” (em dash) in XML comments"
      },
      "noTrailingDash": {
        "enabled": true,
        "severity": "error",
        "message": "XML comments cannot end with dash character"
      }
    },
    "structureRules": {
      "selfClosingTags": {
        "enabled": true,
        "severity": "suggestion",
        "message": "Use self-closing tags for empty elements"
      },
      "properNesting": {
        "enabled": true,
        "severity": "error",
        "message": "Ensure proper XAML element nesting"
      },
      "bindingValidation": {
        "enabled": true,
        "severity": "warning",
        "message": "Validate binding expressions for syntax errors"
      }
    }
  },
  "wpfStandards": {
    "resourceDictionaries": {
      "organizationRequired": true,
      "themeSeparation": true,
      "documentationRequired": true
    },
    "dataBinding": {
      "preferObservableProperty": true,
      "validateBindingPaths": true,
      "requireFallbackValues": "warning"
    },
    "accessibility": {
      "requireAutomationProperties": "suggestion",
      "keyboardNavigation": "warning",
      "highContrast": "suggestion"
    }
  },
  "performanceRules": {
    "avoidComplexBindings": {
      "enabled": true,
      "severity": "suggestion",
      "message": "Complex bindings can impact performance"
    },
    "optimizeResources": {
      "enabled": true,
      "severity": "information",
      "message": "Consider resource optimization for better performance"
    }
  },
  "corruptionDetection": {
    "malformedElements": {
      "enabled": false,
      "severity": "warning",
      "message": "Detect malformed XAML elements"
    },
    "unclosedTags": {
      "enabled": true,
      "severity": "error",
      "message": "Detect unclosed XAML tags"
    },
    "invalidAttributes": {
      "enabled": true,
      "severity": "warning",
      "message": "Detect invalid or corrupted attributes"
    }
  }
}