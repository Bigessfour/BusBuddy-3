{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell: Windows PowerShell",
      "type": "PowerShell",
      "request": "launch"
    },
    {
      "name": "PowerShell: Launch Current File (*.ps1 only)",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "PowerShell", "order": 1 }
    },
    {
      "name": "PowerShell 7: Launch Current File (*.ps1 only)",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "PowerShell", "order": 2 }
    },
    {
      "name": "PowerShell: Debug Current File (*.ps1 only)",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "Debug", "order": 1 }
    },
    {
      "name": "PowerShell: Debug BusBuddy Module",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/PowerShell/BusBuddy.ModuleManager.ps1",
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "BusBuddy Modules", "order": 1 }
    },
    {
      "name": "PowerShell: Debug GitKraken Module",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/PowerShell/BusBuddy-GitKraken.ps1",
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "BusBuddy Modules", "order": 2 }
    },
    {
      "name": "PowerShell: Debug Profile",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/PowerShell/Profiles/Microsoft.PowerShell_profile.ps1",
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "BusBuddy Modules", "order": 3 }
    },
    {
      "name": "PowerShell: Debug GitKraken AI",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/PowerShell/Profiles/Microsoft.PowerShell_profile.ps1",
      "args": ["-Verbose"],
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "BusBuddy Modules", "order": 4 }
    },
    {
      "name": "PowerShell: Attach to Process",
      "type": "PowerShell",
      "request": "attach",
      "presentation": { "hidden": false, "group": "Advanced", "order": 1 }
    },
    {
      "name": "PowerShell: Debug with Parameters",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "args": ["-Verbose", "-Force"],
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "Advanced", "order": 2 }
    },
    {
      "name": "PowerShell: Debug BusBuddy Environment Test",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/PowerShell/Profiles/Microsoft.PowerShell_profile.ps1",
      "args": ["-Verbose", "-SkipGitKraken"],
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "Advanced", "order": 3 }
    },
    {
      "name": "PowerShell: Debug PowerShell Folder",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/PowerShell/Profiles/Microsoft.PowerShell_profile.ps1",
      "args": ["-Verbose"],
      "cwd": "${workspaceFolder}",
      "createTemporaryIntegratedConsole": false,
      "presentation": { "hidden": false, "group": "BusBuddy Modules", "order": 5 }
    }
  ]
}
