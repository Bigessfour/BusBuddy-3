{
  "Environment": "Development",
  "DatabaseProvider": "LocalDB",

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=BusBuddy;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True",
    "LocalConnection": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=BusBuddy;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True",
    "AzureConnection": "Server=tcp:busbuddy-server-sm2.database.windows.net,1433;Initial Catalog=BusBuddyDB;Persist Security Info=False;User ID=${AZURE_SQL_USER};Password=${AZURE_SQL_PASSWORD};MultipleActiveResultSets=True;Encrypt=True;TrustServerCertificate=False;Connection Timeout=60;"
  },

  "AppSettings": {
    "Theme": "FluentDark",
    "FallbackTheme": "FluentLight",
    "AllowThemeSwitching": true,
    "AutoSave": true,
    "AutoSaveInterval": 300,
    "MaxRecentFiles": 10,
    "DefaultPageSize": 25,
    "MaxSearchResults": 100,
    "EnableDetailedLogging": true,
    "AutoMigrateDatabase": true,
    "DatabaseProvider": "SqlServer",
    "AzureSql": {
      "UseEnvironmentVariables": true,
      "ServerEnvVar": "AZURE_SQL_SERVER",
      "UserEnvVar": "AZURE_SQL_USER",
      "PasswordEnvVar": "AZURE_SQL_PASSWORD",
      "ProdDatabase": "BusBuddyProd",
      "StagingDatabase": "BusBuddyStaging"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
  "Microsoft.EntityFrameworkCore": "Debug",
      "System": "Warning"
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Process"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "Enrich": [
      "WithMachineName",
      "WithThreadId",
      "WithProcessId",
      "FromLogContext"
    ],
    "Properties": {
      "Application": "BusBuddy.WPF",
      "Environment": "Development"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ðŸšŒ {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/busbuddy-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ðŸšŒ {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/application.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ]
  },

  "SyncfusionLicenseKey": "${SYNCFUSION_LICENSE_KEY}",

  "GoogleEarthEngine": {
    "ProjectId": "busbuddy-465000",
    "ServiceAccountEmail": "bus-buddy-gee@busbuddy-465000.iam.gserviceaccount.com",
    "ServiceAccountKeyPath": "keys/bus-buddy-gee-key.json",
    "BaseUrl": "https://earthengine.googleapis.com/v1alpha",
    "CodeEditorUrl": "https://code.earthengine.google.com/",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3,
    "CacheExpiryHours": 1,
    "MaxConcurrentRequests": 5,
  "EnableSatelliteImagery": false,
  "EnableTerrainAnalysis": false,
  "EnableTrafficAnalysis": false,
  "EnableWeatherAnalysis": false,
    "DefaultImageResolution": 30,
    "MaxRouteLength": 100000,
    "ServiceArea": {
      "Name": "Bus Buddy Service Area",
      "MinLatitude": 33.0,
      "MaxLatitude": 34.0,
      "MinLongitude": -113.0,
      "MaxLongitude": -111.0
    }
  },

  "XAI": {
    "ApiKey": "${XAI_API_KEY}",
    "BaseUrl": "https://api.x.ai/v1",
    "DefaultModel": "grok-4-latest",
    "TimeoutSeconds": 60,
    "RetryAttempts": 3,
    "MaxTokens": 4000,
    "Temperature": 0.3,
  "UseLiveAPI": false,
  "EnableRouteOptimization": false,
  "EnableMaintenancePrediction": false,
  "EnableSafetyAnalysis": false,
  "EnableStudentOptimization": false,
  "EnableConversationalAI": false,
  "CacheAIResponses": false,
    "CacheExpiryHours": 24,
    "RateLimitPerMinute": 60,
    "PriorityLevel": "Standard",
    "Documentation": {
      "BaseUrl": "https://docs.x.ai",
      "OverviewGuide": "/docs/overview",
      "ChatGuide": "/docs/guides/chat",
      "ApiReference": "/docs/api-reference",
      "ModelsGuide": "/docs/models",
      "AuthenticationGuide": "/docs/authentication",
      "RateLimitsGuide": "/docs/rate-limits",
      "LastUpdated": "2025-07-04",
      "Version": "v1"
    },
    "SystemPrompts": {
      "Transportation": "You are an expert transportation optimization specialist...",
      "Maintenance": "You are a certified fleet maintenance expert...",
      "Safety": "You are a school transportation safety specialist...",
      "Logistics": "You are a logistics optimization expert..."
    }
  },

  "GrokApi": {
    "BaseUrl": "https://api.x.ai/v1",
    "ApiKey": "${GROK_API_KEY}",
    "DefaultModel": "grok-4-0709",
    "TimeoutSeconds": 60,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 2,
    "MaxTokens": 4000,
    "Temperature": 0.3,
    "TopP": 0.9,
    "FrequencyPenalty": 0.0,
    "PresencePenalty": 0.0,
    "EnableStreamingResponse": true,
    "EnableCaching": true,
    "CacheExpiryMinutes": 30,
    "LogApiCalls": true,
    "LogResponseDetails": false,
    "RateLimitRequestsPerMinute": 50,
    "RateLimitTokensPerMinute": 200000,
    "Features": {
      "EnableTransportationAnalysis": true,
      "EnableRouteOptimization": true,
      "EnableMaintenanceRecommendations": true,
      "EnableSafetyReporting": true,
      "EnableStructuredOutputs": true,
      "EnableFunctionCalling": true,
      "EnableImageAnalysis": false
    },
    "Safety": {
      "EnableContentFiltering": true,
      "EnableDataAnonymization": true,
      "LogSensitiveDataAccess": true,
      "RequireApprovalForCriticalRecommendations": true
    }
  },

  "Syncfusion": {
    "NoExternalPackages": true,
    "SamplesPath": "C:\\Program Files (x86)\\Syncfusion\\Essential Studio\\Windows\\30.1.37\\Samples",
    "UseLocalResourcesOnly": true,
    "LocalInstallationPath": "C:\\Program Files (x86)\\Syncfusion\\Essential Studio\\Windows\\30.1.37",
    "LicenseKey": "${SYNCFUSION_LICENSE_KEY}",
    "DocumentationPath": "C:\\Program Files (x86)\\Syncfusion\\Essential Studio\\Windows\\30.1.37\\Help"
  }
}
