<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Menu Item Style for Syncfusion FluentDark theme -->
    <Style x:Key="MenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="{DynamicResource BusBuddy.Brush.Panel.Header}" />
        <Setter Property="Foreground" Value="{DynamicResource BusBuddy.Brush.Text.Primary}" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="FontSize" Value="14" />
    <Setter Property="BorderBrush" Value="{DynamicResource BusBuddy.Brush.Panel.Border}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{DynamicResource BusBuddy.Brush.Primary}"/>
                <Setter Property="Foreground" Value="{DynamicResource BusBuddy.Brush.Text.Primary}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource BusBuddy.Brush.Text.Muted}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Menu Separator Style for Syncfusion FluentDark theme -->
    <Style x:Key="MenuSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource BusBuddy.Brush.Panel.Border}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>

    <!-- Context Menu Style for Syncfusion FluentDark theme -->
    <Style x:Key="ContextMenuStyle" TargetType="ContextMenu">
        <Setter Property="Background" Value="{DynamicResource BusBuddy.Brush.Panel.Header}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BusBuddy.Brush.Panel.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="2"/>
    </Style>
</ResourceDictionary>
