<!-- FluentDarkTheme.xaml (proxy)
  Purpose: provide a local ResourceDictionary that views can merge via
           /BusBuddy.WPF;component/Resources/Themes/FluentDarkTheme.xaml
           This provides project-specific resources and styling.

  Documentation-first: See Syncfusion WPF theming docs for official usage:
  https://help.syncfusion.com/wpf/themes/skin-manager
  Note: Syncfusion themes are applied programmatically via SfSkinManager in App.xaml.cs -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <!-- Merge BusBuddy's validated color/brush inventory so views receive consistent keys -->
        <ResourceDictionary Source="/BusBuddy.WPF;component/Resources/SyncfusionV30_Validated_ResourceDictionary.xaml" />
        <!-- NOTE: Syncfusion FluentDark theme resources are applied programmatically via SfSkinManager -->
        <!-- Manual resource dictionary merging is not required for Syncfusion 30.2.5 themes -->
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
