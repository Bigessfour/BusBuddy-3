<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fluent Dark Color Palette -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="AccentBackgroundBrush" Color="#0078D4"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#6D6D6D"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#464647"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#0E639C"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#1177BB"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFF"/>

    <!-- Input Control Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#3F3F46"/>

    <!-- Data Grid Colors -->
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DataGridHeaderForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="DataGridAlternateRowBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DataGridSelectionBackgroundBrush" Color="#094771"/>
    <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#3F3F46"/>

</ResourceDictionary>
