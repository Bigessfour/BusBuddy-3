<!--
  FluentLightTheme.xaml (proxy)
  Purpose: local proxy to project-specific resources for FluentLight theme.
           Syncfusion theme resources are applied programmatically via SfSkinManager.

  Documentation reference: https://help.syncfusion.com/wpf/themes/skin-manager
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <!-- Merge BusBuddy's validated color/brush inventory so views receive consistent keys -->
        <ResourceDictionary Source="/BusBuddy.WPF;component/Resources/SyncfusionV30_Validated_ResourceDictionary.xaml" />
        <!-- NOTE: Syncfusion FluentLight theme resources are applied programmatically via SfSkinManager -->
        <!-- Manual resource dictionary merging is not required for Syncfusion 30.2.5 themes -->
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
