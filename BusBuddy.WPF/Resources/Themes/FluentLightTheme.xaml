<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <!-- Fluent Light Color Palette -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="AccentBackgroundBrush" Color="#0078D4"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#323130"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#605E5C"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#A19F9D"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D2D0CE"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#C7C6C4"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFF"/>

    <!-- Input Control Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="#323130"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#D2D0CE"/>

    <!-- Data Grid Colors -->
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="DataGridHeaderForegroundBrush" Color="#323130"/>
    <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridAlternateRowBackgroundBrush" Color="#F8F8F8"/>
    <SolidColorBrush x:Key="DataGridSelectionBackgroundBrush" Color="#CCE8FF"/>
    <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#E1DFDD"/>

    <!-- Syncfusion control styles integrated with Fluent Light theme -->
    <Style TargetType="{x:Type syncfusion:ButtonAdv}">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource HoverBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource ButtonPressedBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
