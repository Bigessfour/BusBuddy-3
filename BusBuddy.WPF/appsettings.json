{
  "SyncfusionLicenseKey": "${SYNCFUSION_LICENSE_KEY}",
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:busbuddy-server-sm2.database.windows.net,1433;Initial Catalog=BusBuddyDB;Persist Security Info=False;User ID=${AZURE_SQL_USER};Password=${AZURE_SQL_PASSWORD};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=60;",
    "LocalConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=BusBuddy;Integrated Security=True;MultipleActiveResultSets=True",
    "AzureConnection": "Server=tcp:busbuddy-server-sm2.database.windows.net,1433;Initial Catalog=BusBuddyDB;Persist Security Info=False;User ID=${AZURE_SQL_USER};Password=${AZURE_SQL_PASSWORD};MultipleActiveResultSets=True;Encrypt=True;TrustServerCertificate=False;Connection Timeout=60;Max Pool Size=100;Min Pool Size=5;Pooling=true;",
    "BusBuddyDatabase": "Data Source=BusBuddy.db",
    "BusBuddyDb": "Server=tcp:busbuddy-server-sm2.database.windows.net,1433;Initial Catalog=BusBuddyDB;Authentication=Active Directory Default;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
    "AzureADConnection": "Server=tcp:busbuddy-server-sm2.database.windows.net,1433;Initial Catalog=BusBuddyDB;Authentication=Active Directory Default;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;MultipleActiveResultSets=True;"
  },
  "ApplicationInsights": {
    "InstrumentationKey": "${APPLICATIONINSIGHTS_INSTRUMENTATION_KEY}",
    "ConnectionString": "${APPLICATIONINSIGHTS_CONNECTION_STRING}",
    "EnableDependencyTracking": true,
    "EnablePerformanceCounterCollectionModule": false,
    "EnableSamplingBasedPerformanceModule": true,
    "EnableQuickPulseMetricStream": false,
    "EnableAdaptiveSampling": true,
    "MaxTelemetryItemsPerSecond": 10,
    "SamplingPercentage": 50.0
  },
  "GoogleEarthEngine": {
    "ProjectId": "busbuddy-465000",
    "ServiceAccountEmail": "bus-buddy-gee@busbuddy-465000.iam.gserviceaccount.com",
    "ServiceAccountKeyPath": "keys/bus-buddy-gee-key.json",
    "BaseUrl": "https://earthengine.googleapis.com/v1alpha",
    "CodeEditorUrl": "https://code.earthengine.google.com/",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3,
    "CacheExpiryHours": 1,
    "MaxConcurrentRequests": 5,
    "EnableSatelliteImagery": false,
    "EnableTerrainAnalysis": false,
    "EnableTrafficAnalysis": false,
    "EnableWeatherAnalysis": false,
    "DefaultImageResolution": 30,
    "MaxRouteLength": 100000,
    "ServiceArea": {
      "Name": "Bus Buddy Service Area",
      "MinLatitude": 33.0,
      "MaxLatitude": 34.0,
      "MinLongitude": -113.0,
      "MaxLongitude": -111.0
    },
    "Eligibility": {
      "DistrictAssetId": "${GEE_DISTRICT_ASSET}",
      "TownAssetId": "${GEE_TOWN_ASSET}"
    }
  },
  "XAI": {
    "ApiKey": "${XAI_API_KEY}",
    "BaseUrl": "https://api.x.ai/v1",
    "TimeoutSeconds": 60,
    "RetryAttempts": 3,
    "MaxTokens": 128000,
    "Temperature": 0.3,
    "UseLiveAPI": false,
    "EnableRouteOptimization": false,
    "EnableMaintenancePrediction": false,
    "EnableSafetyAnalysis": false,
    "EnableStudentOptimization": false,
    "EnableConversationalAI": false,
    "CacheAIResponses": false,
    "RateLimitPerMinute": 60,
    "PriorityLevel": "Standard",
    "Documentation": {
      "BaseUrl": "https://docs.x.ai",
      "OverviewGuide": "/docs/overview",
      "ChatGuide": "/docs/guides/chat",
      "ApiReference": "/docs/api-reference",
      "ModelsGuide": "/docs/models",
      "AuthenticationGuide": "/docs/authentication",
      "RateLimitsGuide": "/docs/rate-limits",
      "LastUpdated": "2025-07-04",
      "Version": "v1"
    },
    "SystemPrompts": {
      "Transportation": "You are an expert transportation optimization specialist...",
      "Maintenance": "You are a certified fleet maintenance expert...",
      "Safety": "You are a school transportation safety specialist...",
      "Logistics": "You are a logistics optimization expert..."
    }
  },
  "DatabaseProvider": "LocalDB",
  "AppSettings": {
    "Theme": "FluentDark",
    "AutoSave": true,
    "AutoSaveInterval": 300,
    "MaxRecentFiles": 10,
    "EnableDetailedLogging": true,
    "AutoMigrateDatabase": true,
    "DefaultPageSize": 25,
    "MaxSearchResults": 100
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Debug",
      "BusBuddy.Core.Services.BusService": "Debug",
      "BusBuddy.Core.Services.BusCachingService": "Debug",
      "System": "Warning",
      "System.Windows": "Error"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Settings.Configuration"
    ],
    "MinimumLevel": "Information",
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/busbuddy-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "shared": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Syncfusion": {
    "NoExternalPackages": true,
    "SamplesPath": "C:\\Program Files (x86)\\Syncfusion\\Essential Studio\\Windows\\30.2.5\\Samples",
    "UseLocalResourcesOnly": true,
    "LocalInstallationPath": "C:\\Program Files (x86)\\Syncfusion\\Essential Studio\\Windows\\30.2.5",
    "LicenseKey": "${SYNCFUSION_LICENSE_KEY}",
    "DocumentationPath": "C:\\Program Files (x86)\\Syncfusion\\Essential Studio\\Windows\\30.2.5\\Help"
  },
  "UI": {
    "DefaultTheme": "FluentDark",
    "EnableAnimations": true,
    "ResponsiveLayout": true,
    "DebugMode": true
  }
}
