<UserControl x:Class="BusBuddy.WPF.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#2B2D30" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dashboard Header -->
        <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8" Padding="20,15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🚌 BusBuddy Dashboard" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="#FFFFFF" Margin="0,0,0,5"/>
                    <TextBlock Text="Transportation Management Overview" 
                               FontSize="14" Foreground="#B3B3B3"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 Refresh" 
                            Command="{Binding RefreshCommand}"
                            Margin="0,0,10,0" Padding="15,8"
                            Background="#0078D4" Foreground="White" 
                            BorderThickness="0" Style="{x:Null}"/>
                    <Button Content="📊 Report" 
                            Command="{Binding GenerateReportCommand}"
                            Padding="15,8"
                            Background="#107C10" Foreground="White" 
                            BorderThickness="0" Style="{x:Null}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Key Metrics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Routes Card -->
            <Border Grid.Column="0" Margin="0,0,10,0"
                    Background="#1E1E1E" BorderBrush="#404040" 
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="🗺️" FontSize="24" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Text="{Binding TotalRoutes}" 
                               FontSize="36" FontWeight="Bold" 
                               Foreground="#0078D4" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="Total Routes" 
                               FontSize="12" Foreground="#B3B3B3" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Active Buses Card -->
            <Border Grid.Column="1" Margin="5,0"
                    Background="#1E1E1E" BorderBrush="#404040" 
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="🚌" FontSize="24" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Text="{Binding ActiveBuses}" 
                               FontSize="36" FontWeight="Bold" 
                               Foreground="#107C10" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="Active Buses" 
                               FontSize="12" Foreground="#B3B3B3" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Available Drivers Card -->
            <Border Grid.Column="2" Margin="5,0"
                    Background="#1E1E1E" BorderBrush="#404040" 
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="👨‍✈️" FontSize="24" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Text="{Binding AvailableDrivers}" 
                               FontSize="36" FontWeight="Bold" 
                               Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="Available Drivers" 
                               FontSize="12" Foreground="#B3B3B3" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- System Status Card -->
            <Border Grid.Column="3" Margin="10,0,0,0"
                    Background="#1E1E1E" BorderBrush="#404040" 
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="📊" FontSize="24" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Ellipse Grid.Row="1" Width="20" Height="20" 
                             Fill="#10B981" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="System Online" 
                               FontSize="12" Foreground="#10B981" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content Area with Data Grids -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Recent Routes -->
            <Border Grid.Column="0" Margin="0,0,10,0"
                    Background="#1E1E1E" BorderBrush="#404040" 
                    BorderThickness="1" CornerRadius="8">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="📋 Recent Routes" 
                               FontSize="18" FontWeight="SemiBold" 
                               Foreground="#FFFFFF" Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="📋 Route Data Loading..." 
                                       FontSize="14" Foreground="#B3B3B3" 
                                       Margin="0,10" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Routes.Count, StringFormat='Total Routes: {0}'}" 
                                       FontSize="12" Foreground="White" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Bus Fleet Status -->
            <Border Grid.Column="1" Margin="10,0,0,0"
                    Background="#1E1E1E" BorderBrush="#404040" 
                    BorderThickness="1" CornerRadius="8">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="🚌 Fleet Status" 
                               FontSize="18" FontWeight="SemiBold" 
                               Foreground="#FFFFFF" Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="🚌 Fleet Data Loading..." 
                                       FontSize="14" Foreground="#B3B3B3" 
                                       Margin="0,10" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Buses.Count, StringFormat='Total Buses: {0}'}" 
                                       FontSize="12" Foreground="White" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="8" 
                Padding="20,12" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding SystemStatus}" 
                           Foreground="#B3B3B3" VerticalAlignment="Center" FontSize="14"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,8,0"/>
                    <TextBlock Text="Last Updated: Now" 
                               Foreground="#10B981" VerticalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                CornerRadius="8">
            <Grid>
                <TextBlock Text="⏳" FontSize="60" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#0078D4"/>
                <TextBlock Text="Loading dashboard data..." 
                           Foreground="White" FontSize="16"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Margin="0,100,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
