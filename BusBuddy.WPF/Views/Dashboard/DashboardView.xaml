<UserControl x:Class="BusBuddy.WPF.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource PrimaryBackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dashboard Header -->
    <Border Grid.Row="0" Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="8" Padding="20,15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🚌 BusBuddy Dashboard"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,5"/>
                    <TextBlock Text="Transportation Management Overview"
                               FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Replace standard Buttons with Syncfusion ButtonAdv per project rules -->
                        <syncfusion:ButtonAdv Label="🔄 Refresh"
                                              Command="{Binding RefreshCommand}"
                                              Margin="0,0,10,0" Padding="15,8"
                                              Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"
                                              BorderThickness="1"
                                              AutomationProperties.Name="Refresh Dashboard"
                                              AutomationProperties.HelpText="Reload dashboard metrics and lists"/>
                        <syncfusion:ButtonAdv Label="📊 Report"
                                              Command="{Binding GenerateReportCommand}"
                                              Padding="15,8"
                                              Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"
                                              BorderThickness="1"
                                              AutomationProperties.Name="Generate Dashboard Report"
                                              AutomationProperties.HelpText="Generate printable dashboard report"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Key Metrics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Routes Card -->
        <Border Grid.Column="0" Margin="0,0,10,0"
            Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="🗺️" FontSize="24"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Text="{Binding TotalRoutes}"
                               FontSize="36" FontWeight="Bold"
                               Foreground="{DynamicResource AccentTextBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="Total Routes"
                               FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Active Buses Card -->
        <Border Grid.Column="1" Margin="5,0"
            Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="🚌" FontSize="24"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Text="{Binding ActiveBuses}"
                               FontSize="36" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="Active Buses"
                               FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Available Drivers Card -->
        <Border Grid.Column="2" Margin="5,0"
            Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="👨‍✈️" FontSize="24"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Text="{Binding AvailableDrivers}"
                               FontSize="36" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="Available Drivers"
                               FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- System Status Card -->
        <Border Grid.Column="3" Margin="10,0,0,0"
            Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="📊" FontSize="24"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Ellipse Grid.Row="1" Width="20" Height="20"
                             Fill="{DynamicResource BusBuddy.Brush.Semantic.Success}" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Text="System Online"
                               FontSize="12" Foreground="{DynamicResource BusBuddy.Brush.Semantic.Success}"
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content Area with Syncfusion DockingManager (aligns with MainWindow pattern) -->
        <syncfusion:DockingManager Grid.Row="2"
                                   x:Name="DashboardDockingManager"
                                   UseDocumentContainer="True"
                                   PersistState="True">
            <!-- Recent Routes - docked on the left -->
            <ContentControl x:Name="RecentRoutesPane"
                            syncfusion:DockingManager.Header="📋 Recent Routes"
                            syncfusion:DockingManager.State="Dock"
                            syncfusion:DockingManager.SideInDockedMode="Left"
                            syncfusion:DockingManager.DesiredWidthInDockedMode="450">
                <Border Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Margin="0,0,10,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="📋 Recent Routes"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,15"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="📋 Route Data Loading..."
                                           FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,10" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Routes.Count, StringFormat='Total Routes: {0}'}"
                                           FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </ContentControl>

            <!-- Fleet Status - docked on the right -->
            <ContentControl x:Name="FleetStatusPane"
                            syncfusion:DockingManager.Header="🚌 Fleet Status"
                            syncfusion:DockingManager.State="Dock"
                            syncfusion:DockingManager.SideInDockedMode="Right"
                            syncfusion:DockingManager.DesiredWidthInDockedMode="520">
                <Border Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Margin="10,0,0,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="🚌 Fleet Status"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,15"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="🚌 Fleet Data Loading..."
                                           FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,10" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Buses.Count, StringFormat='Total Buses: {0}'}"
                                           FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </ContentControl>

            <!-- Optional central document placeholder -->
            <ContentControl x:Name="DashboardDocument"
                            syncfusion:DockingManager.Header="📈 Overview"
                            syncfusion:DockingManager.State="Document">
                <Grid Margin="20">
                    <TextBlock Text="Dashboard Overview"
                               FontSize="18" Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </ContentControl>
        </syncfusion:DockingManager>

        <!-- Status Bar -->
    <Border Grid.Row="3" Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="8"
                Padding="20,12" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding SystemStatus}"
                           Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" FontSize="14"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="{DynamicResource BusBuddy.Brush.Semantic.Success}" Margin="0,0,8,0"/>
                    <TextBlock Text="Last Updated: Now"
                               Foreground="{DynamicResource BusBuddy.Brush.Semantic.Success}" VerticalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
    <Border Grid.RowSpan="4" Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                CornerRadius="8">
            <Grid>
                <TextBlock Text="⏳" FontSize="60"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
               Foreground="{DynamicResource AccentTextBrush}"/>
                <TextBlock Text="Loading dashboard data..."
               Foreground="{DynamicResource PrimaryTextBrush}" FontSize="16"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Margin="0,100,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
