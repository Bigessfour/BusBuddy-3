<Window x:Class="BusBuddy.WPF.Views.Student.QuickActionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Actions" Height="260" Width="360" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
        <StackPanel Grid.Row="1" Margin="0,5,0,5">
            <Button Name="AssignRouteButton" Content="Assign Default Route to Selected" Margin="0,0,0,6" Padding="8"/>
            <Button Name="FilterActiveButton" Content="Filter Active Students" Margin="0,0,0,6" Padding="8"/>
            <Button Name="ClearFiltersButton" Content="Clear Filters" Margin="0,0,0,6" Padding="8"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CloseButton" Content="Close" Width="80" Margin="6,0,0,0" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
