<syncfusion:ChromelessWindow x:Class="BusBuddy.WPF.Views.Reports.PdfPreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:pdf="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
    Title="Eligibility PDF Preview" Height="800" Width="1000"
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResize"
    MinWidth="600" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="8" >
            <syncfusion:ButtonAdv Label="Print" Margin="0,0,8,0" Padding="12,6" Click="Print_Click"/>
            <syncfusion:ButtonAdv Label="Close" Padding="12,6" Click="Close_Click"/>
        </DockPanel>
    <!-- Removed ShowPrintStatusDialog (not in current Syncfusion PdfViewerControl API version) -->
    <!-- Basic PdfViewerControl (removed unsupported properties for current Syncfusion version) -->
    <pdf:PdfViewerControl x:Name="Viewer" Grid.Row="1" />
        <StatusBar Grid.Row="2">
            <TextBlock Text="Use mouse wheel + Ctrl to zoom. Press Print to open system dialog." Margin="6,0"/>
        </StatusBar>
    </Grid>
</syncfusion:ChromelessWindow>
