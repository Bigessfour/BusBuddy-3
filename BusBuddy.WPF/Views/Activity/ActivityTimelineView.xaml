<UserControl x:Class="BusBuddy.WPF.Views.Activity.ActivityTimelineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BusBuddy.WPF;component/Resources/SyncfusionV30_Validated_ResourceDictionary.xaml"/>
                <ResourceDictionary Source="/BusBuddy.WPF;component/Resources/Themes/FluentDarkTheme.xaml"/>
                <ResourceDictionary Source="/BusBuddy.WPF;component/Resources/Themes/FluentLightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource ContentBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Activity Timeline"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="20,10"/>

        <!-- Timeline Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Filters Grid -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Date Range Selection -->
                <TextBlock Text="Date Range:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Margin="0,0,8,0"/>
                <syncfusion:ComboBoxAdv Grid.Column="1" Grid.Row="0" SelectedItem="{Binding SelectedDateRange}" ItemsSource="{Binding DateRanges}" Width="150" Margin="0,0,15,0">
                    <syncfusion:ComboBoxAdv.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}"/>
                        </DataTemplate>
                    </syncfusion:ComboBoxAdv.ItemTemplate>
                </syncfusion:ComboBoxAdv>

                <!-- Custom Date Range -->
                <TextBlock Text="From:" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" Margin="0,0,5,0"
                           Visibility="{Binding IsCustomDateRange, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <syncfusion:SfMaskedEdit Grid.Column="3" Grid.Row="0" Text="{Binding StartDate}" Width="130" Margin="0,0,10,0"
                            Visibility="{Binding IsCustomDateRange, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Event Type Filtering -->
                <TextBlock Text="Event Types:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Margin="0,10,8,0"/>
                <ListBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"
                          SelectedItem="{Binding SelectedEventTypes}"
                          ItemsSource="{Binding EventTypes}"
                          DisplayMemberPath="DisplayName"
                          SelectionMode="Multiple"
                          Margin="0,10,0,0"
                          Width="350">
                    <ListBox.ToolTip>
                        <ToolTip Content="Select one or more event types to display"/>
                    </ListBox.ToolTip>
                </ListBox>
            </Grid>

            <!-- Timeline View -->
            <ListView Grid.Row="2"
                      x:Name="ActivityScheduler"
                      ItemsSource="{Binding TimelineEvents}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Subject" DisplayMemberBinding="{Binding Subject}" Width="150"/>
                        <GridViewColumn Header="Start Time" DisplayMemberBinding="{Binding StartTime, StringFormat=\{0:MM/dd/yyyy hh:mm tt\}}" Width="180"/>
                        <GridViewColumn Header="End Time" DisplayMemberBinding="{Binding EndTime, StringFormat=\{0:MM/dd/yyyy hh:mm tt\}}" Width="180"/>
                        <GridViewColumn Header="Details" DisplayMemberBinding="{Binding Details}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Legend -->
            <Border Grid.Row="3" BorderBrush="{DynamicResource BusBuddy.Brush.Border.Light}" BorderThickness="0,1,0,0" Padding="0,8,0,0" Margin="0,10,0,0">
                <ItemsControl ItemsSource="{Binding EventLegendItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="12" Height="12" Fill="{Binding Color}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Loading Indicator -->
            <Border Grid.Row="0" Grid.RowSpan="4" Background="{DynamicResource BusBuddy.Brush.Overlay.White50}"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Loading timeline data..." FontSize="16" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True"
                                Height="20"
                                Width="200"
                                Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- No Data Indicator -->
            <Border Grid.Row="2" Background="Transparent"
                    Visibility="{Binding HasNoData, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="No activity data found for the selected time period"
                              FontSize="16" HorizontalAlignment="Center" Foreground="{DynamicResource BusBuddy.Brush.Text.Subtle}"/>
                    <TextBlock Text="Try adjusting your filters or selecting a different date range"
                              FontSize="14" HorizontalAlignment="Center" Foreground="{DynamicResource BusBuddy.Brush.Text.Subtler}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
