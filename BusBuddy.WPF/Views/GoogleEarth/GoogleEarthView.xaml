<!--
╔═════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════
║                                                      🌍 GOOGLE EARTH INTEGRATION 🌍                                                ║
║                                                    [GEOSPATIAL MAPPING INTERFACE]                                                  ║
║  ✨ MVP PHASE 1: Standard WPF controls for basic functionality                                                                     ║
║  🎯 GOOGLE EARTH ENGINE: Placeholder for advanced mapping capabilities                                                             ║
║  🎭 ROUTE VISUALIZATION: Interactive route mapping interface preparation                                                           ║
║  📊 GEOSPATIAL ANALYTICS: Basic location-based interface                                                                          ║
║  🌐 REAL-TIME TRACKING: Live bus tracking interface with standard controls                                                        ║
╚═════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════
-->
<UserControl x:Class="BusBuddy.WPF.Views.GoogleEarth.GoogleEarthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BusBuddy.WPF.Views.GoogleEarth"
             xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels.GoogleEarth"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:GoogleEarthViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#2D3748"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#FFD700"
                            Width="48" Height="48"
                            CornerRadius="24"
                            Margin="0,0,16,0">
                        <TextBlock Text="🌍"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Google Earth Integration"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Advanced Geospatial Mapping and Route Visualization"
                                   FontSize="14"
                                   Foreground="#CCCCCC"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#2ECC71"
                            CornerRadius="16"
                            Padding="12,6"
                            Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10"
                                     Fill="White"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="GPS Active"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <ComboBox x:Name="MapLayerComboBox"
                              Width="150"
                              Height="32"
                              Margin="16,0"
                              SelectedIndex="0"
                              SelectionChanged="MapLayerComboBox_SelectionChanged">
                        <ComboBoxItem Content="Satellite"/>
                        <ComboBoxItem Content="Terrain"/>
                        <ComboBoxItem Content="Hybrid"/>
                        <ComboBoxItem Content="Roadmap"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Control Panel -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="16">
                    <StackPanel>
                        <!-- Map Controls -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#DEE2E6"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Map Controls"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#2D3748"
                                           Margin="0,0,0,12"/>

                                <Button Content="📍 Center on Fleet"
                                        Command="{Binding CenterOnFleetCommand}"
                                        Background="#007ACC"
                                        Foreground="White"
                                        Padding="10,8"
                                        Margin="0,4"
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"/>

                                <Button Content="🚌 Show All Buses"
                                        Command="{Binding ShowAllBusesCommand}"
                                        Background="#6C757D"
                                        Foreground="White"
                                        Padding="10,8"
                                        Margin="0,4"
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"/>

                                <Button Content="🛣️ Show Routes"
                                        Command="{Binding ShowRoutesCommand}"
                                        Background="#6C757D"
                                        Foreground="White"
                                        Padding="10,8"
                                        Margin="0,4"
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"/>

                                <Button Content="🏫 Show Schools"
                                        Command="{Binding ShowSchoolsCommand}"
                                        Background="#6C757D"
                                        Foreground="White"
                                        Padding="10,8"
                                        Margin="0,4"
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Live Tracking -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#DEE2E6"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Live Tracking"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#2D3748"
                                           Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Real-time Updates"
                                               FontSize="14"
                                               Foreground="#2D3748"
                                               VerticalAlignment="Center"/>

                                    <CheckBox Grid.Column="1"
                                              IsChecked="{Binding IsLiveTrackingEnabled}"
                                              VerticalAlignment="Center"/>
                                </Grid>

                                <Separator Margin="0,8"/>

                                <TextBlock Text="Update Frequency"
                                           FontSize="12"
                                           Foreground="#2D3748"
                                           Margin="0,0,0,4"/>

                                <ComboBox SelectedIndex="1">
                                    <ComboBoxItem Content="5 seconds"/>
                                    <ComboBoxItem Content="10 seconds"/>
                                    <ComboBoxItem Content="30 seconds"/>
                                    <ComboBoxItem Content="1 minute"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- Bus List -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#DEE2E6"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Active Buses"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#2D3748"
                                           Margin="0,0,0,12"/>

                                <DataGrid x:Name="BusListGrid"
                                          ItemsSource="{Binding ActiveBuses}"
                                          SelectedItem="{Binding SelectedBus}"
                                          Height="200"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="None"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Bus #"
                                                            Binding="{Binding BusNumber}"
                                                            Width="60"/>
                                        <DataGridTextColumn Header="Route"
                                                            Binding="{Binding RouteNumber}"
                                                            Width="60"/>
                                        <DataGridTextColumn Header="Status"
                                                            Binding="{Binding Status}"
                                                            Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Button Content="📍 Track Selected"
                                        Command="{Binding TrackSelectedBusCommand}"
                                        Background="#007ACC"
                                        Foreground="White"
                                        Padding="10,8"
                                        Margin="0,8,0,0"
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Map Display Area -->
            <Border Grid.Column="1"
                    Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    Margin="0"
                    MinHeight="400">
                <Grid>
                    <!-- Map Container -->
                    <Border x:Name="MapContainer"
                            Background="#1a1a1a"
                            CornerRadius="8"
                            Margin="16"
                            MinHeight="400">
                        <Grid>
                            <!-- Placeholder for Google Earth integration -->
                            <Border Background="#FF1a1a1a"
                                    CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="🌍"
                                               FontSize="64"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,16"/>
                                    <TextBlock Text="Google Earth Integration"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Interactive mapping and route visualization"
                                               FontSize="14"
                                               Foreground="#CCCCCC"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,24"/>
                                    <Button Content="Initialize Google Earth"
                                            Command="{Binding InitializeMapCommand}"
                                            Background="#007ACC"
                                            Foreground="White"
                                            Padding="15,10"
                                            BorderThickness="0"
                                            Width="200"/>
                                </StackPanel>
                            </Border>

                            <!-- Map Loading Indicator -->
                            <Border x:Name="MapLoadingIndicator"
                                    Background="#80000000"
                                    Visibility="{Binding IsMapLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="⚙️"
                                               FontSize="50"
                                               HorizontalAlignment="Center"
                                               Foreground="White"
                                               Margin="0,0,0,16">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform x:Name="LoadingRotation" CenterX="25" CenterY="25"/>
                                        </TextBlock.RenderTransform>
                                        <TextBlock.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                                         Storyboard.TargetProperty="Angle"
                                                                         From="0" To="360" Duration="0:0:2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBlock.Triggers>
                                    </TextBlock>
                                    <TextBlock Text="Loading Map..."
                                               FontSize="16"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Map Overlay Controls -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="32,32,32,0">
                        <Button Content="+"
                                Command="{Binding ZoomInCommand}"
                                Background="#007ACC"
                                Foreground="White"
                                Width="40" Height="40"
                                FontSize="20"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Margin="4,0"/>
                        <Button Content="-"
                                Command="{Binding ZoomOutCommand}"
                                Background="#007ACC"
                                Foreground="White"
                                Width="40" Height="40"
                                FontSize="20"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Margin="4,0"/>
                        <Button Content="🏠"
                                Command="{Binding ResetViewCommand}"
                                Background="#007ACC"
                                Foreground="White"
                                Width="40" Height="40"
                                BorderThickness="0"
                                Margin="4,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>


