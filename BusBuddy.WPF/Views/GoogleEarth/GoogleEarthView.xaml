<!--
    Google Earth Integration View
    Strict Syncfusion WPF 30.1.42 usage with SfSkinManager theming (FluentDark default, FluentLight fallback).
    Theme brushes referenced via DynamicResource: PrimaryBackgroundBrush, AccentBackgroundBrush, BorderBrush, ButtonBackgroundBrush, ButtonForegroundBrush, PrimaryTextBrush, AccentTextBrush.
    Key Syncfusion docs:
        â€¢ ButtonAdv â€” API reference: https://help.syncfusion.com/cr/wpf/Syncfusion.Windows.Tools.Controls.ButtonAdv.html â€” Toggle state: https://help.syncfusion.com/wpf/button/toggle-state
        â€¢ ComboBoxAdv â€” API reference: https://help.syncfusion.com/cr/wpf/Syncfusion.Windows.Tools.Controls.ComboBoxAdv.html
        â€¢ SfBusyIndicator â€” Getting started: https://help.syncfusion.com/wpf/busy-indicator/getting-started
        â€¢ SfDataGrid â€” Getting started: https://help.syncfusion.com/wpf/datagrid/getting-started
        â€¢ SfSkinManager â€” Themes and resource keys: https://help.syncfusion.com/wpf/themes/skin-manager
    Notes:
        â€¢ Framework controls that remain (e.g., Separator) are themed via SfSkinManager style key WPFSeparatorStyle per documentation.
        â€¢ Avoid literal colors; rely on theme dictionaries merged in App.xaml (FluentDarkTheme.xaml / FluentLightTheme.xaml).
-->
<UserControl x:Class="BusBuddy.WPF.Views.GoogleEarth.GoogleEarthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:maps="clr-namespace:Syncfusion.UI.Xaml.Maps;assembly=Syncfusion.SfMaps.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BusBuddy.WPF.Views.GoogleEarth"
             xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels.GoogleEarth"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:GoogleEarthViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                <!-- BooleanToVisibilityConverter used by busy overlay â€” framework converter is supported and themed by SkinManager where applicable -->
    </UserControl.Resources>

    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

    <!-- Header â€” Title, status, and layer selector wired to SelectionChanged handler in code-behind -->
    <Border Grid.Row="0"
        Background="{DynamicResource AccentBackgroundBrush}"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{DynamicResource AccentBackgroundBrush}"
                            Width="48" Height="48"
                            CornerRadius="24"
                            Margin="0,0,16,0">
                        <TextBlock Text="ðŸŒ"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Google Earth Integration"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentTextBrush}"/>
                        <TextBlock Text="Advanced Geospatial Mapping and Route Visualization"
                                   FontSize="14"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Background="{DynamicResource ButtonBackgroundBrush}"
                            CornerRadius="16"
                            Padding="12,6"
                            Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10"
                                                                         Fill="{DynamicResource ButtonForegroundBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="GPS Active"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                                                             Foreground="{DynamicResource ButtonForegroundBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Layer selector â€” values map to InitializeMapLayer(..) via MapLayerComboBox_SelectionChanged -->
                    <syncfusion:ComboBoxAdv x:Name="MapLayerComboBox"
                                            Width="150"
                                            Height="32"
                                            Margin="16,0"
                                            SelectedIndex="0"
                                            SelectionChanged="MapLayerComboBox_SelectionChanged">
                        <syncfusion:ComboBoxItemAdv Content="Satellite"/>
                        <syncfusion:ComboBoxItemAdv Content="Terrain"/>
                        <syncfusion:ComboBoxItemAdv Content="Hybrid"/>
                        <syncfusion:ComboBoxItemAdv Content="Roadmap"/>
                        <syncfusion:ComboBoxItemAdv Content="OpenStreetMap"/>
                    </syncfusion:ComboBoxAdv>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Control Panel â€” Commands bind to GoogleEarthViewModel (CenterOnFleet, ShowAllBuses, ShowRoutes, ShowSchools) -->
    <Border Grid.Column="0"
            Background="{DynamicResource PrimaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="16">
                    <StackPanel>
                        <!-- Map Controls â€” Syncfusion ButtonAdv used per documented API: https://help.syncfusion.com/cr/wpf/Syncfusion.Windows.Tools.Controls.ButtonAdv.html -->
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Map Controls"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,12"/>

                <syncfusion:ButtonAdv Content="ðŸ“ Center on Fleet"
                              Command="{Binding CenterOnFleetCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="ðŸšŒ Show All Buses"
                              Command="{Binding ShowAllBusesCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <TextBlock Text="Map Layers &amp; Overlays" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,4"/>
                <syncfusion:ButtonAdv Content="ðŸ›£ï¸ Show Routes"
                              Command="{Binding ShowRoutesCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="ðŸ« Show Schools"
                              Command="{Binding ShowSchoolsCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <!-- MVP demo: Add a stop marker (plots coordinates near Wiley). Uses AddMarkerCommand with "lat,lon,label" string parameter -->
                <TextBlock Text="Markers" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,12,0,4"/>
                <syncfusion:ButtonAdv Content="âž• Add Stop (Demo)"
                              Command="{Binding AddMarkerCommand}"
                              CommandParameter="38.1530,-102.7200,Demo Stop"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <TextBlock Text="Eligibility" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,12,0,4"/>
                <syncfusion:ButtonAdv Content="âœ… Check Eligibility (Demo)"
                              Command="{Binding CheckEligibilityCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,8,0,0"
                              HorizontalAlignment="Stretch"/>

                    <!-- Bulk plot rural eligible students (auto geocode + eligibility filter) -->
                    <syncfusion:ButtonAdv Content="ðŸ—ºï¸ Bulk Plot Eligible Students"
                                          ToolTip="Auto-geocode + plot all rural (non-Lamar, out-of-town) eligible students"
                                          Command="{Binding BulkPlotEligibleStudentsCommand}"
                                          Background="{DynamicResource ButtonBackgroundBrush}"
                                          Foreground="{DynamicResource ButtonForegroundBrush}"
                                          Padding="10,8"
                                          Margin="0,4,0,0"
                                          HorizontalAlignment="Stretch"/>

                <!-- Generate Eligibility Route PDF (auto-build pseudo route) -->
                <syncfusion:ButtonAdv Content="ðŸ§¾ Generate Eligibility PDF"
                              Command="{Binding GenerateEligibilityRoutePdfCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4,0,0"
                              HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Live Tracking â€” ButtonAdv toggle documented here: https://help.syncfusion.com/wpf/button/toggle-state -->
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Live Tracking"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Real-time Updates"
                                               FontSize="14"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               VerticalAlignment="Center"/>

                                    <!-- Use documented ButtonAdv toggle: https://help.syncfusion.com/wpf/button/toggle-state -->
                                    <syncfusion:ButtonAdv Grid.Column="1"
                                                          Width="80"
                                                          Height="28"
                                                          HorizontalAlignment="Right"
                                                          Background="{DynamicResource ButtonBackgroundBrush}"
                                                          Foreground="{DynamicResource ButtonForegroundBrush}"
                                                          IsCheckable="True"
                                                          IsChecked="{Binding IsLiveTrackingEnabled, Mode=TwoWay}"
                                                          Label="Live"/>
                                </Grid>

                                <!-- Theme standard Separator via SfSkinManager key -->
                                <Separator Margin="0,8" Style="{DynamicResource WPFSeparatorStyle}"/>

                                <TextBlock Text="Update Frequency"
                                           FontSize="12"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,4"/>

                                <syncfusion:ComboBoxAdv SelectedIndex="1">
                                    <syncfusion:ComboBoxItemAdv Content="5 seconds"/>
                                    <syncfusion:ComboBoxItemAdv Content="10 seconds"/>
                                    <syncfusion:ComboBoxItemAdv Content="30 seconds"/>
                                    <syncfusion:ComboBoxItemAdv Content="1 minute"/>
                                </syncfusion:ComboBoxAdv>
                            </StackPanel>
                        </Border>

                        <!-- District Boundary Overlay Toggle â€” uses Syncfusion ButtonAdv toggle per docs: https://help.syncfusion.com/wpf/button/toggle-state -->
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,16,0,0">
                            <StackPanel>
                                <TextBlock Text="Overlays"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="School District Boundary"
                                               FontSize="14"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               VerticalAlignment="Center"/>

                                    <syncfusion:ButtonAdv Grid.Column="1"
                                                          Width="100"
                                                          Height="28"
                                                          HorizontalAlignment="Right"
                                                          Background="{DynamicResource ButtonBackgroundBrush}"
                                                          Foreground="{DynamicResource ButtonForegroundBrush}"
                                                          IsCheckable="True"
                                                          IsChecked="{Binding DistrictBoundaryVisible, Mode=TwoWay}"
                                                          Label="Show"/>
                                </Grid>

                                <!-- Wiley Town Boundary Toggle â€” to visualize exclusion zone inside district for eligibility -->
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Wiley Town Boundary"
                                               FontSize="14"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               VerticalAlignment="Center"/>

                                    <syncfusion:ButtonAdv Grid.Column="1"
                                                          Width="100"
                                                          Height="28"
                                                          HorizontalAlignment="Right"
                                                          Background="{DynamicResource ButtonBackgroundBrush}"
                                                          Foreground="{DynamicResource ButtonForegroundBrush}"
                                                          IsCheckable="True"
                                                          IsChecked="{Binding TownBoundaryVisible, Mode=TwoWay}"
                                                          Label="Show"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Bus List â€” SfDataGrid usage follows Getting Started: https://help.syncfusion.com/wpf/datagrid/getting-started -->
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Active Buses"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,12"/>

                                <syncfusion:SfDataGrid x:Name="BusListGrid"
                                                       ItemsSource="{Binding ActiveBuses}"
                                                       SelectedItem="{Binding SelectedBus}"
                                                       Height="200"
                                                       AutoGenerateColumns="False"
                                                       AllowEditing="False"
                                                       AllowSorting="True"
                                                       AllowFiltering="False"
                                                       SelectionMode="Single"
                                                       GridLinesVisibility="Both"
                                                          HeaderLinesVisibility="Both">
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridTextColumn HeaderText="Bus #"
                                                                   MappingName="BusNumber"
                                                                   Width="60"/>
                                        <syncfusion:GridTextColumn HeaderText="Route"
                                                                   MappingName="RouteNumber"
                                                                   Width="60"/>
                                        <syncfusion:GridTextColumn HeaderText="Status"
                                                                   MappingName="Status"
                                                                   Width="80"/>
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>

                                <syncfusion:ButtonAdv Content="ðŸ“ Track Selected"
                                                      Command="{Binding TrackSelectedBusCommand}"
                                                      Background="{DynamicResource ButtonBackgroundBrush}"
                                                      Foreground="{DynamicResource ButtonForegroundBrush}"
                                                      Padding="10,8"
                                                      Margin="0,8,0,0"
                                                      HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Map Display Area -->
    <Border Grid.Column="1"
            Background="{DynamicResource PrimaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    Margin="0"
                    MinHeight="400">
                <Grid>
                    <!-- Map Container â€” Main SfMap host with zoom/pan enabled per docs: https://help.syncfusion.com/wpf/maps/getting-started -->
            <Border x:Name="MapContainer"
                Background="{DynamicResource ContentBackgroundBrush}"
                            CornerRadius="8"
                            Margin="16"
                            MinHeight="400">
                        <Grid>
                            <Grid.Resources>
                                <!-- Simple marker template (pin image could be added later) -->
                                <DataTemplate x:Key="StudentMarkerTemplate">
                                    <StackPanel Orientation="Vertical" Margin="-8,-24,0,0">
                                        <Ellipse Width="12" Height="12" Fill="{DynamicResource BusBuddy.Brush.Semantic.Error}" Stroke="{DynamicResource BusBuddy.Brush.Text.Primary}" StrokeThickness="1"/>
                                        <TextBlock Text="{Binding Label}" FontSize="11" Foreground="{DynamicResource BusBuddy.Brush.Text.Primary}" Background="#AA2B2B2B" Padding="4,1" Margin="-12,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Grid.Resources>
                            <!-- SfMap â€” per official docs: https://help.syncfusion.com/wpf/maps/getting-started -->
                            <maps:SfMap x:Name="GeoMap"
                                        EnableZoom="True"
                                        EnablePan="True" />

                            <!-- Map Loading â€” SfBusyIndicator pattern per docs: https://help.syncfusion.com/wpf/busy-indicator/getting-started -->
                            <Border x:Name="MapLoadingIndicator"
                                    Background="{DynamicResource AccentBackgroundBrush}"
                                    Opacity="0.95"
                                    Visibility="{Binding IsMapLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <syncfusion:SfBusyIndicator Grid.Row="0"
                                                               Width="80" Height="80"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               AnimationType="Flight"/>
                                    <TextBlock Grid.Row="1"
                                               Text="Loading Map..."
                                               Margin="0,12,0,0"
                                               FontSize="16"
                                               Foreground="{DynamicResource AccentTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Map Overlay Controls â€” Zoom and Reset buttons bound to ViewModel commands -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="32,32,32,0">
                        <syncfusion:ButtonAdv Content="+"
                                              Command="{Binding ZoomInCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Margin="4,0"/>
                        <syncfusion:ButtonAdv Content="-"
                                              Command="{Binding ZoomOutCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Margin="4,0"/>
                        <syncfusion:ButtonAdv Content="ðŸ "
                                              Command="{Binding ResetViewCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              Margin="4,0"/>
                        <!-- Refresh map (re-renders layers/route polyline) -->
                        <syncfusion:ButtonAdv Content="âŸ³"
                                              ToolTip="Refresh Map"
                                              Command="{Binding RefreshMapCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Margin="8,0,0,0"/>
                        <!-- Print current route map -->
                        <syncfusion:ButtonAdv Content="ðŸ–¨"
                                              ToolTip="Print Route Map"
                                              Command="{Binding PrintRouteMapsCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- OSM Attribution â€” Visibility toggled from code-behind (ToggleOsmAttribution) when OpenStreetMap is active -->
                    <Border x:Name="OsmAttribution"
                            Background="{DynamicResource AccentBackgroundBrush}"
                            Opacity="0.85"
                            CornerRadius="4"
                            Padding="6,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,24,16"
                            Visibility="Collapsed">
                        <TextBlock Text="Â© OpenStreetMap contributors"
                                   FontSize="11"
                                   Foreground="{DynamicResource AccentTextBrush}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
