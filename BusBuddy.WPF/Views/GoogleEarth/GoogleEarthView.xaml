<!--
╔═════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════
║                                                      🌍 GOOGLE EARTH INTEGRATION 🌍                                                ║
║                                                    [GEOSPATIAL MAPPING INTERFACE]                                                  ║
║  ✨ MVP PHASE 1: Standard WPF controls for basic functionality                                                                     ║
║  🎯 GOOGLE EARTH ENGINE: Placeholder for advanced mapping capabilities                                                             ║
║  🎭 ROUTE VISUALIZATION: Interactive route mapping interface preparation                                                           ║
║  📊 GEOSPATIAL ANALYTICS: Basic location-based interface                                                                          ║
║  🌐 REAL-TIME TRACKING: Live bus tracking interface with standard controls                                                        ║
╚═════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════════
-->
<UserControl x:Class="BusBuddy.WPF.Views.GoogleEarth.GoogleEarthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BusBuddy.WPF.Views.GoogleEarth"
             xmlns:viewModels="clr-namespace:BusBuddy.WPF.ViewModels.GoogleEarth"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance viewModels:GoogleEarthViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
    <Border Grid.Row="0"
        Background="{DynamicResource AccentBackgroundBrush}"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{DynamicResource AccentBackgroundBrush}"
                            Width="48" Height="48"
                            CornerRadius="24"
                            Margin="0,0,16,0">
                        <TextBlock Text="🌍"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Google Earth Integration"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AccentTextBrush}"/>
                        <TextBlock Text="Advanced Geospatial Mapping and Route Visualization"
                                   FontSize="14"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Background="{DynamicResource ButtonBackgroundBrush}"
                            CornerRadius="16"
                            Padding="12,6"
                            Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10"
                                                                         Fill="{DynamicResource ButtonForegroundBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="GPS Active"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                                                             Foreground="{DynamicResource ButtonForegroundBrush}"/>
                        </StackPanel>
                    </Border>

                    <syncfusion:ComboBoxAdv x:Name="MapLayerComboBox"
                                            Width="150"
                                            Height="32"
                                            Margin="16,0"
                                            SelectedIndex="0"
                                            SelectionChanged="MapLayerComboBox_SelectionChanged">
                        <syncfusion:ComboBoxItemAdv Content="Satellite"/>
                        <syncfusion:ComboBoxItemAdv Content="Terrain"/>
                        <syncfusion:ComboBoxItemAdv Content="Hybrid"/>
                        <syncfusion:ComboBoxItemAdv Content="Roadmap"/>
                    </syncfusion:ComboBoxAdv>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Control Panel -->
    <Border Grid.Column="0"
            Background="{DynamicResource PrimaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="16">
                    <StackPanel>
                        <!-- Map Controls -->
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Map Controls"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,12"/>

                <syncfusion:ButtonAdv Content="📍 Center on Fleet"
                              Command="{Binding CenterOnFleetCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="🚌 Show All Buses"
                              Command="{Binding ShowAllBusesCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="🛣️ Show Routes"
                              Command="{Binding ShowRoutesCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>

                <syncfusion:ButtonAdv Content="🏫 Show Schools"
                              Command="{Binding ShowSchoolsCommand}"
                              Background="{DynamicResource ButtonBackgroundBrush}"
                              Foreground="{DynamicResource ButtonForegroundBrush}"
                              Padding="10,8"
                              Margin="0,4"
                              HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Live Tracking -->
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Live Tracking"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Real-time Updates"
                                               FontSize="14"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               VerticalAlignment="Center"/>

                                    <!-- Use documented ButtonAdv toggle: https://help.syncfusion.com/wpf/button/toggle-state -->
                                    <syncfusion:ButtonAdv Grid.Column="1"
                                                          Width="80"
                                                          Height="28"
                                                          HorizontalAlignment="Right"
                                                          Background="{DynamicResource ButtonBackgroundBrush}"
                                                          Foreground="{DynamicResource ButtonForegroundBrush}"
                                                          IsCheckable="True"
                                                          IsChecked="{Binding IsLiveTrackingEnabled, Mode=TwoWay}"
                                                          Label="Live"/>
                                </Grid>

                                <!-- Theme standard Separator via SfSkinManager key -->
                                <Separator Margin="0,8" Style="{DynamicResource WPFSeparatorStyle}"/>

                                <TextBlock Text="Update Frequency"
                                           FontSize="12"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,4"/>

                                <syncfusion:ComboBoxAdv SelectedIndex="1">
                                    <syncfusion:ComboBoxItemAdv Content="5 seconds"/>
                                    <syncfusion:ComboBoxItemAdv Content="10 seconds"/>
                                    <syncfusion:ComboBoxItemAdv Content="30 seconds"/>
                                    <syncfusion:ComboBoxItemAdv Content="1 minute"/>
                                </syncfusion:ComboBoxAdv>
                            </StackPanel>
                        </Border>

                        <!-- Bus List -->
            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Active Buses"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                                           Margin="0,0,0,12"/>

                                <syncfusion:SfDataGrid x:Name="BusListGrid"
                                                       ItemsSource="{Binding ActiveBuses}"
                                                       SelectedItem="{Binding SelectedBus}"
                                                       Height="200"
                                                       AutoGenerateColumns="False"
                                                       AllowEditing="False"
                                                       AllowSorting="True"
                                                       AllowFiltering="False"
                                                       SelectionMode="Single"
                                                       GridLinesVisibility="Both"
                                                       HeaderLinesVisibility="All">
                                    <syncfusion:SfDataGrid.Columns>
                                        <syncfusion:GridTextColumn HeaderText="Bus #"
                                                                   MappingName="BusNumber"
                                                                   Width="60"/>
                                        <syncfusion:GridTextColumn HeaderText="Route"
                                                                   MappingName="RouteNumber"
                                                                   Width="60"/>
                                        <syncfusion:GridTextColumn HeaderText="Status"
                                                                   MappingName="Status"
                                                                   Width="80"/>
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>

                                <syncfusion:ButtonAdv Content="📍 Track Selected"
                                                      Command="{Binding TrackSelectedBusCommand}"
                                                      Background="{DynamicResource ButtonBackgroundBrush}"
                                                      Foreground="{DynamicResource ButtonForegroundBrush}"
                                                      Padding="10,8"
                                                      Margin="0,8,0,0"
                                                      HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Map Display Area -->
    <Border Grid.Column="1"
            Background="{DynamicResource PrimaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    Margin="0"
                    MinHeight="400">
                <Grid>
                    <!-- Map Container -->
            <Border x:Name="MapContainer"
                Background="{DynamicResource ContentBackgroundBrush}"
                            CornerRadius="8"
                            Margin="16"
                            MinHeight="400">
                        <Grid>
                            <!-- Placeholder for Google Earth integration -->
                            <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                                    CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="🌍"
                                               FontSize="64"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,16"/>
                                    <TextBlock Text="Google Earth Integration"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Interactive mapping and route visualization"
                                               FontSize="14"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,24"/>
                                    <syncfusion:ButtonAdv Content="Initialize Google Earth"
                                                          Command="{Binding InitializeMapCommand}"
                                                          Background="{DynamicResource ButtonBackgroundBrush}"
                                                          Foreground="{DynamicResource ButtonForegroundBrush}"
                                                          Padding="15,10"
                                                          Width="200"/>
                                </StackPanel>
                            </Border>

                            <!-- Map Loading Indicator using Syncfusion SfBusyIndicator (docs: help.syncfusion.com/wpf/busy-indicator/getting-started) -->
                            <Border x:Name="MapLoadingIndicator"
                                    Background="{DynamicResource AccentBackgroundBrush}"
                                    Opacity="0.95"
                                    Visibility="{Binding IsMapLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <syncfusion:SfBusyIndicator Grid.Row="0"
                                                               Width="80" Height="80"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               AnimationType="Flight"/>
                                    <TextBlock Grid.Row="1"
                                               Text="Loading Map..."
                                               Margin="0,12,0,0"
                                               FontSize="16"
                                               Foreground="{DynamicResource AccentTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Map Overlay Controls -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="32,32,32,0">
                        <syncfusion:ButtonAdv Content="+"
                                              Command="{Binding ZoomInCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Margin="4,0"/>
                        <syncfusion:ButtonAdv Content="-"
                                              Command="{Binding ZoomOutCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Margin="4,0"/>
                        <syncfusion:ButtonAdv Content="🏠"
                                              Command="{Binding ResetViewCommand}"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"
                                              Width="40" Height="40"
                                              Margin="4,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
