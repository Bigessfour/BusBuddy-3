<UserControl x:Class="BusBuddy.WPF.Views.Route.RouteAssignmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BusBuddy.WPF;component/Resources/SyncfusionV30_Validated_ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
          <!-- Local converter needed because this view references BooleanToVisibilityConverter directly.
              Although App.xaml defines a global one, XAML parse errors indicate it was not resolved at load time.
              Adding explicit local resource guarantees resolution. -->
          <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
    <Border Grid.Row="0" Background="{DynamicResource AccentBackgroundBrush}" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🗺️" FontSize="24" Foreground="{DynamicResource ButtonForegroundBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Route Assignment - MVP Route Builder" FontSize="18" FontWeight="Bold"
                          Foreground="{DynamicResource ButtonForegroundBrush}" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
    <Grid Grid.Row="1" x:Name="RouteLayoutRoot">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Unassigned Students -->
            <GroupBox Grid.Column="0" Header="📚 Unassigned Students" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Filter -->
                    <syncfusion:SfMaskedEdit Grid.Row="0"
                             Text="{Binding StudentSearchText, Mode=TwoWay}"
                             Margin="10,10,10,15"
                             Height="35">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{DynamicResource ContentBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="3">
                                                <ScrollViewer x:Name="PART_ContentHost" Padding="8,5"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </syncfusion:SfMaskedEdit>

                    <!-- Students Grid -->
                    <syncfusion:SfDataGrid Grid.Row="1"
                                          x:Name="UnassignedStudentsGrid"
                                          ItemsSource="{Binding UnassignedStudents}"
                                          SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                                          AutoGenerateColumns="False"
                                          AllowSorting="True"
                                          AllowFiltering="True"
                                          AllowGrouping="True"
                                          ShowGroupDropArea="True"
                                          SelectionMode="Single"
                                          GridLinesVisibility="Both"
                                          ColumnSizer="Star"
                                          Background="{DynamicResource BusBuddy.Brush.DataGrid.Background}"
                                          AutomationProperties.Name="Unassigned Students Grid"
                                          AutomationProperties.HelpText="Students not yet assigned to the selected route">
                        <syncfusion:SfDataGrid.Columns>
                            <syncfusion:GridTextColumn HeaderText="Name" MappingName="StudentName" Width="150"/>
                            <syncfusion:GridTextColumn HeaderText="Grade" MappingName="Grade" Width="60"/>
                            <syncfusion:GridTextColumn HeaderText="Address" MappingName="HomeAddress" Width="200"/>
                            <syncfusion:GridTextColumn HeaderText="City" MappingName="City" Width="100"/>
                        </syncfusion:SfDataGrid.Columns>
                    </syncfusion:SfDataGrid>

                    <!-- Student Count -->
                    <TextBlock Grid.Row="2"
                              Text="{Binding UnassignedStudentCount, StringFormat='Unassigned: {0} students'}"
                              Margin="10,10,10,5" FontWeight="SemiBold"/>
                </Grid>
            </GroupBox>

            <!-- Assignment Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                <syncfusion:ButtonAdv Label="➡️ Assign"
                                     Command="{Binding AssignStudentCommand}"
                                     Margin="0,0,0,10" Padding="15,8"
                                     Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"
                                     IsEnabled="{Binding CanAssignStudent}"/>
                <syncfusion:ButtonAdv Label="⬅️ Remove"
                                     Command="{Binding RemoveStudentCommand}"
                                     Margin="0,0,0,10" Padding="15,8"
                                     Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"
                                     IsEnabled="{Binding CanRemoveStudent}"/>
                <syncfusion:ButtonAdv Label="🔄 Auto Assign"
                                     Command="{Binding AutoAssignCommand}"
                                     Padding="15,8"
                                     Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
            </StackPanel>

            <!-- Route Assignment -->
            <GroupBox Grid.Column="2" Header="🚌 Route Assignment" Margin="10,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Route Selection -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,15" VerticalAlignment="Center">
                        <Label Content="Route:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <syncfusion:ComboBoxAdv ItemsSource="{Binding AvailableRoutes}"
                                              SelectedItem="{Binding SelectedRoute, Mode=TwoWay}"
                                              DisplayMemberPath="RouteName"
                                              Width="180" Margin="0,0,12,0"/>
                        <Label Content="Name:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox Width="140" Margin="0,0,8,0" Text="{Binding NewRouteName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Date:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <DatePicker Width="130" Margin="0,0,8,0" SelectedDate="{Binding NewRouteDate, Mode=TwoWay}"/>
                        <syncfusion:ButtonAdv Label="➕ Create"
                                             Command="{Binding CreateRouteCommand}"
                                             Padding="10,6" Width="90"
                                             Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    </StackPanel>

                    <!-- Route Info -->
                    <Border Grid.Row="1" Background="{DynamicResource ContentBackgroundBrush}" Padding="10" Margin="10,0,10,15" CornerRadius="3">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedRoute.RouteName, StringFormat='Route: {0}'}"
                                      FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding AssignedStudentCount, StringFormat='Students: {0}'}"
                                          Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding SelectedRouteBusDisplay, StringFormat='Bus: {0}'}"
                                          Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding SelectedRouteDriverDisplay, StringFormat='Driver: {0}'}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Assigned Students Grid -->
                    <syncfusion:SfDataGrid Grid.Row="2"
                                          x:Name="AssignedStudentsGrid"
                                          ItemsSource="{Binding AssignedStudentsForSelectedRoute}"
                                          SelectedItem="{Binding SelectedAssignedStudent, Mode=TwoWay}"
                                          AutoGenerateColumns="False"
                                          AllowSorting="True"
                                          AllowFiltering="True"
                                          AllowGrouping="True"
                                          ShowGroupDropArea="True"
                                          SelectionMode="Single"
                                          GridLinesVisibility="Both"
                                          ColumnSizer="Star"
                                          Background="{DynamicResource BusBuddy.Brush.DataGrid.Background}"
                                          AutomationProperties.Name="Assigned Students Grid"
                                          AutomationProperties.HelpText="Students currently assigned to this route">
                        <syncfusion:SfDataGrid.Columns>
                            <syncfusion:GridTextColumn HeaderText="Name" MappingName="StudentName" Width="120"/>
                            <syncfusion:GridTextColumn HeaderText="Grade" MappingName="Grade" Width="60"/>
                            <syncfusion:GridTextColumn HeaderText="Address" MappingName="HomeAddress" Width="180"/>
                            <syncfusion:GridNumericColumn HeaderText="Stop #" MappingName="StopNumber" Width="70"/>
                        </syncfusion:SfDataGrid.Columns>
                    </syncfusion:SfDataGrid>

                    <!-- Assigned Count -->
                    <TextBlock Grid.Row="3"
                              Text="{Binding AssignedStudentCount, StringFormat='Assigned: {0} students'}"
                              Margin="10,10,10,5" FontWeight="SemiBold"/>
                </Grid>
            </GroupBox>

            <!-- Route Configuration -->
            <GroupBox Grid.Column="4" Header="⚙️ Route Config" Margin="10,0,0,0" Padding="4">
                <StackPanel Margin="10" Orientation="Vertical">
                    <!-- Activation State -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                        <TextBlock Text="Status:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedRoute.IsActive, Converter={StaticResource BooleanToVisibilityConverter}, StringFormat=Active}" Margin="6,0,0,0"/>
                        <syncfusion:ButtonAdv Label="Activate" Margin="10,0,0,0" Padding="8,4" Command="{Binding ActivateRouteCommand}" Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                        <syncfusion:ButtonAdv Label="Deactivate" Margin="6,0,0,0" Padding="8,4" Command="{Binding DeactivateRouteCommand}" Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    </StackPanel>
                    <!-- Bus Assignment -->
                    <Label Content="Assign Bus:"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <syncfusion:ComboBoxAdv Width="160"
                                                ItemsSource="{Binding AvailableBuses}"
                                                SelectedItem="{Binding SelectedBus, Mode=TwoWay}"
                                                DisplayMemberPath="BusNumber"/>
                        <syncfusion:ButtonAdv Label="Assign"
                                              Command="{Binding AssignVehicleCommand}"
                                              Margin="10,0,0,0"
                                              Padding="10,6"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    </StackPanel>

                    <!-- Driver Assignment -->
                    <Label Content="Assign Driver:"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <syncfusion:ComboBoxAdv Width="160"
                                                ItemsSource="{Binding AvailableDrivers}"
                                                SelectedItem="{Binding SelectedDriver, Mode=TwoWay}"
                                                DisplayMemberPath="DriverName"/>
                        <syncfusion:ButtonAdv Label="Assign"
                                              Command="{Binding AssignDriverCommand}"
                                              Margin="10,0,0,0"
                                              Padding="10,6"
                                              Background="{DynamicResource ButtonBackgroundBrush}"
                                              Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    </StackPanel>

                    <!-- Route Actions -->
                    <syncfusion:ButtonAdv Label="💾 Save Route"
                                         Command="{Binding SaveRouteCommand}"
                                         Margin="0,0,0,10" Padding="12,8"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <syncfusion:ButtonAdv Label="🗑️ Delete Route"
                                         Command="{Binding DeleteRouteCommand}"
                                         Margin="0,0,0,10" Padding="12,8"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <syncfusion:ButtonAdv Label="📋 View Schedule"
                                         Command="{Binding ViewScheduleCommand}"
                                         Padding="12,8"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <syncfusion:ButtonAdv Label="🗺️ Plot Route Students"
                                         Command="{Binding PlotRouteOnMapCommand}"
                                         Margin="0,10,0,0" Padding="12,8"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <syncfusion:ButtonAdv Label="🖨️ Print Map"
                                         Command="{Binding PrintMapCommand}"
                                         Margin="0,10,0,10" Padding="12,8"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <syncfusion:ButtonAdv Label="⏱️ Time Stops"
                                         Command="{Binding TimeRouteCommand}"
                                         Padding="12,8"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <Separator Margin="0,12,0,12"/>
                    <syncfusion:ButtonAdv Label="🔄 Refresh"
                                          Command="{Binding RefreshDataCommand}"
                                          Padding="10,6" Margin="0,0,0,4"
                                          Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <syncfusion:ButtonAdv Label="📑 Validate"
                                          Command="{Binding ValidateRouteCommand}"
                                          Padding="10,6"
                                          Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Route Stops Timing Section -->
        <GroupBox Grid.Row="2" Header="🛑 Route Stops (Timing)" Margin="0,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="10,10,10,5">
                    <Label Content="Start Time (HH:mm):" VerticalAlignment="Center"/>
                    <syncfusion:SfMaskedEdit Width="90" Margin="8,0,0,0"
                                             Text="{Binding StartTimeString, Mode=TwoWay}"/>
                    <TextBlock Text="Default 07:30" Margin="10,0,0,0" VerticalAlignment="Center" FontStyle="Italic"/>
                </StackPanel>
                <syncfusion:SfDataGrid Grid.Row="1"
                                      ItemsSource="{Binding RouteStops}"
                                      AutoGenerateColumns="False"
                                      AllowSorting="True"
                                      SelectionMode="Single"
                                      GridLinesVisibility="Both"
                                      Background="{DynamicResource BusBuddy.Brush.DataGrid.Background}">
                    <syncfusion:SfDataGrid.Columns>
                        <syncfusion:GridNumericColumn HeaderText="#" MappingName="StopOrder" Width="60"/>
                        <syncfusion:GridTextColumn HeaderText="Stop" MappingName="StopName" Width="180"/>
                        <!-- Using GridDateTimeColumn per Syncfusion documentation: https://help.syncfusion.com/wpf/datagrid/column-types -->
                        <!-- Time display using DisplayBinding with StringFormat (Syncfusion GridDateTimeColumn supports formatting via DisplayBinding) -->
                        <syncfusion:GridDateTimeColumn HeaderText="Arrival"
                                                       MappingName="EstimatedArrivalTime"
                                                       Width="120"
                                                       DisplayBinding="{Binding EstimatedArrivalTime, StringFormat=HH:mm}" />
                        <syncfusion:GridDateTimeColumn HeaderText="Departure"
                                                       MappingName="EstimatedDepartureTime"
                                                       Width="120"
                                                       DisplayBinding="{Binding EstimatedDepartureTime, StringFormat=HH:mm}" />
                        <syncfusion:GridNumericColumn HeaderText="Dwell (min)" MappingName="StopDuration" Width="110"/>
                    </syncfusion:SfDataGrid.Columns>
                </syncfusion:SfDataGrid>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
    <Border Grid.Row="3" Background="{DynamicResource ContentBackgroundBrush}" Padding="15,10" Margin="0,20,0,0" CornerRadius="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="{Binding StatusMessage}"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <syncfusion:ButtonAdv Label="🔄 Refresh Data"
                                         Command="{Binding RefreshDataCommand}"
                                         Margin="0,0,10,0" Padding="12,6"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                    <syncfusion:ButtonAdv Label="📊 Generate Report"
                                         Command="{Binding GenerateReportCommand}"
                                         Padding="12,6"
                                         Background="{DynamicResource ButtonBackgroundBrush}" Foreground="{DynamicResource ButtonForegroundBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
