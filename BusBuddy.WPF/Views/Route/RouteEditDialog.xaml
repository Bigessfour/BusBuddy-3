<!-- RouteEditDialog.xaml - Route editing dialog for BusBuddy MVP
     Uses Syncfusion SfMaskedEdit for route details (Start, End, Stops)
     Documentation: https://help.syncfusion.com/wpf/maskededit/getting-started -->
<UserControl x:Class="BusBuddy.WPF.Views.Route.RouteEditDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Edit Route" FontWeight="Bold" FontSize="18" Margin="0,0,0,16"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="Start Location"/>
            <syncfusion:SfMaskedEdit x:Name="StartMaskedEdit"
                                    MaskType="Text"
                                    Text="{Binding StartLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="250" Margin="0,2,0,8"/>
            <TextBlock Text="End Location"/>
            <syncfusion:SfMaskedEdit x:Name="EndMaskedEdit"
                                    MaskType="Text"
                                    Text="{Binding EndLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="250" Margin="0,2,0,8"/>
            <TextBlock Text="Stops (comma separated)"/>
            <syncfusion:SfMaskedEdit x:Name="StopsMaskedEdit"
                                    MaskType="Text"
                                    Text="{Binding Stops, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="250" Margin="0,2,0,8"/>
        </StackPanel>
    <syncfusion:ButtonAdv Grid.Row="4"
                         Label="Save"
                         SizeMode="Normal"
                         IconHeight="16" IconWidth="16"
                         CornerRadius="4"
                         Background="{DynamicResource AccentBackgroundBrush}"
                         Foreground="{DynamicResource PrimaryTextBrush}"
                         Width="110"
                         Height="36"
                         HorizontalAlignment="Right"
                         Margin="0,12,0,0"
                         AutomationProperties.Name="Save Route Changes"
                         Command="{Binding SaveCommand}"
                         CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Grid>
</UserControl>
