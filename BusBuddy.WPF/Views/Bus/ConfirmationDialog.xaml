<Window x:Class="BusBuddy.WPF.Views.Bus.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="Confirmation"
        Height="250"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource SurfaceBackground}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,20">
            <TextBlock Text="⚠️"
                       FontSize="24"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock Text="Confirmation Required"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Please confirm that you want to proceed with this action."
                           FontSize="12"
                           Foreground="#666666"/>
            </StackPanel>
        </StackPanel>

        <!-- Message Content -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBackground}"
                BorderBrush="{DynamicResource SurfaceBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <TextBlock x:Name="MessageText"
                       Text="Are you sure you want to perform this action?"
                       TextWrapping="Wrap"
                       FontSize="14"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <syncfusion:ButtonAdv Label="No, Cancel"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="NoButton_Click"
                    IsCancel="True"/>
            <syncfusion:ButtonAdv Label="Yes, Continue"
                    Width="120"
                    Height="35"
                    Click="YesButton_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>


