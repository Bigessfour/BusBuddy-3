<Window x:Class="BusBuddy.WPF.Views.Bus.BusForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="Bus Information Form"
        Height="450" Width="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Bus Information Form"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Bus Number -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Bus Number:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="BusNumberTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <!-- Make -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Make:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="MakeTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <!-- Model -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Model:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="ModelTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <!-- Year -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Year:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="YearTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <!-- Capacity -->
        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Seating Capacity:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="CapacityTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <syncfusion:ButtonAdv Content="Save"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <syncfusion:ButtonAdv Content="Cancel"
                    Width="80"
                    Height="35"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

