<Window x:Class="BusBuddy.WPF.Views.Bus.BusEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="Edit Bus"
    Height="560"
    Width="700"
    MinHeight="520"
    MinWidth="680"
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResizeWithGrip">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Bus Information"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Bus Number -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Bus Number:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="BusNumberTextBox"
                     Height="30"
                     Padding="5"/>
        </StackPanel>

        <!-- Make -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Make:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="MakeTextBox"
                     Height="30"
                     Padding="5"/>
        </StackPanel>

        <!-- Model -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Model:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="ModelTextBox"
                     Height="30"
                     Padding="5"/>
        </StackPanel>

        <!-- Year -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Year:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="YearTextBox"
                     Height="30"
                     Padding="5"/>
        </StackPanel>

        <!-- Seating Capacity -->
        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Seating Capacity:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="CapacityTextBox"
                     Height="30"
                     Padding="5"/>
        </StackPanel>

        <!-- License Number -->
        <StackPanel Grid.Row="6" Margin="0,0,0,10">
            <TextBlock Text="License Number:" Margin="0,0,0,5"/>
            <syncfusion:SfMaskedEdit x:Name="LicenseNumberTextBox"
                     Height="30"
                     Padding="5"/>
        </StackPanel>

        <!-- Buttons -->
    <StackPanel Grid.Row="8"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,25,0,0">
        <syncfusion:ButtonAdv x:Name="SaveButton"
                   Label="ðŸ’¾ Save"
                   Width="100"
                   Height="38"
                   Margin="0,0,12,0"
                   AutomationProperties.Name="Save Bus"
                   AutomationProperties.HelpText="Validate and save bus details"/>
        <syncfusion:ButtonAdv x:Name="CancelButton"
                   Label="âœ– Cancel"
                   Width="100"
                   Height="38"
                   AutomationProperties.Name="Cancel Edit"
                   AutomationProperties.HelpText="Close without saving changes"/>
    </StackPanel>
    </Grid>
</Window>

<!-- Save / Cancel click handlers are wired in code-behind (BusEditDialog.xaml.cs) -->
