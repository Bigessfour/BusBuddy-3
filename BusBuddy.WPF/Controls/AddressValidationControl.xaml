<UserControl x:Class="BusBuddy.WPF.Controls.AddressValidationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Address Validation" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <syncfusion:SfMaskedEdit x:Name="AddressTextBox"
                     Text="{Binding Street, Mode=TwoWay}"
                     Margin="0,0,0,10"/>

            <syncfusion:ButtonAdv Label="Validate Address"
                    Click="ValidateAddress_Click"
                    Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <Label Content="Validation Results:" FontWeight="Bold"/>
            <TextBlock x:Name="ResultsTextBlock"
                       Text="{Binding ValidationMessage}"
                       TextWrapping="Wrap"
                       Margin="0,5"/>
        </StackPanel>

        <!-- Progress Section -->
        <StackPanel Grid.Row="2" Margin="10" HorizontalAlignment="Center">
            <TextBlock x:Name="ProgressTextBlock"
                       Text=""
                       HorizontalAlignment="Center"
                       Margin="0,10"/>
        </StackPanel>
    </Grid>
</UserControl>



